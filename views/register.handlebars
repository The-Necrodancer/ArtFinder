{{#if hasError}} 
    <p class="error_message"> {{error}} </p>
{{/if}}
<main>
    <form id="register_form" action="/register" method="post">
        <div class="form_control">
            <label id="username_label" for="username_input"> Username</label>
            <input type="text" name="username_input" id="username_input">
        </div>
        <div class="form_control">
            <label id="email_label" for="email_input"> Email </label>
            <input type="text" name="email_input" id="email_input">
        </div>
        <div class="form_control">
            <label id="password_label" for="password_input"> Password </label>
            <input type="password" name="password_input" id="password_input">
        </div>
        <div class="form_control">
            <label id="confirm_password_label" for="confirm_password_input"> Confirm Password </label>
            <input type="text" name="confirm_password_input" id="confirm_password_input">
        </div>
        <div class="form_control">
            <p> Are you an artist? </p>
            <label id="is_artist_label" for="is_artist_input_yes"> Yes </label>
            <input type="radio" name="is_artist_input" id="is_artist_input_yes" value="Yes">
            <label id="is_artist_label" for="is_artist_input_no"> No </label>
            <input type="radio" name="is_artist_input" id="is_artist_input_no" value="No">
        </div>
        <div class="form_control">
            <button class="submit_button" type="submit"> Create Account </button>
        </div>
    </form>
</main>
