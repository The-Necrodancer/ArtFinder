<form id="search-form" action="/search" method="GET">
  <input
    type="text"
    id="search-input"
    name="query"
    placeholder="Search for an artist..."
  />
  <select name="style">
    <option value="">Any Style</option>
    <option value="anime">Anime</option>
    <option value="chibi">Chibi</option>
    <option value="realism">Realism</option>
  </select>
  <button type="submit">Search</button>
</form>
<section id="artist-list">
  <h2>Artists</h2>
  <ul id="artists">
    {{#each cards}}
      <li class="artist-card">
        <h3>{{this.name}}</h3>
        {{#if this.isOfficial}}
          <span class="recommended-badge">Verified</span>
        {{else}}
          <span class="recommended-badge">Fan Profile</span>
        {{/if}}

        {{#if this.artistProfile}}
          <p>Rating: {{this.artistProfile.rating}}/5</p>
          <p>Availability:
            {{#if this.artistProfile.availability}}Open{{else}}Closed{{/if}}</p>
          {{#if this.artistProfile.tags}}
            <div class="tags">
              {{#each this.artistProfile.tags}}
                <span class="tag">{{this}}</span>
              {{/each}}
            </div>
          {{/if}}
        {{/if}}

        <div class="artist-actions">
          <a href="/artist/{{this.uid}}" class="view-profile-btn">View Profile</a>
        </div>
      </li>
    {{/each}}
  </ul>
</section>
<script src="/js/browse.js"></script>